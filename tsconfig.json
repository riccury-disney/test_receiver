{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es5",
    "lib": ["es2016", "es2017.object", "es2015.promise", "dom", "webworker"],
    "sourceMap": true,
    "allowJs": true,
    "strictBindCallApply": true,
    "noImplicitThis": true,
    "experimentalDecorators": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
  ]
}
